#!/bin/sh
cd <%= @options[:home] %>
touch jenkins.start
exec chpst -u <%= @options[:user] %> -U <%= @options[:user] %> \
  env HOME=<%= @options[:home] %> \
  JENKINS_HOME=<%= @options[:home] %>/jenkins-data \
  java -jar <%= @options[:jvm_opts] %> jenkins.war \
  -Xloggc:<%= @options[:log_dir] %>/gclog.log

